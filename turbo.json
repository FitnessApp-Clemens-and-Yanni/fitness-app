{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "docker-build": {
      "dependsOn": ["^docker-build"]
    },
    "docker-tag": {
      "dependsOn": ["^docker-tag"]
    },
    "docker-push": {
      "dependsOn": ["^docker-push"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
