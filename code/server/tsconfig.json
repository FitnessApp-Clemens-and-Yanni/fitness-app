{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "sourceMap": true,
    "outDir": "./build",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["../shared/build/*"]
    },
    "composite": true
  },
  "exclude": ["node_modules", "build"],
  "references": [{ "path": "../shared" }]
}
