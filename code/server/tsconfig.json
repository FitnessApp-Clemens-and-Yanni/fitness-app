{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "outDir": "./types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    },
    "composite": true
  },
  "exclude": ["node_modules", "types"]
}
