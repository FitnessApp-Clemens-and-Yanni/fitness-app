{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "sourceMap": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    },
    "composite": true
  },
  "exclude": ["node_modules", "build"],
  "references": [{ "path": "../shared" }]
}
